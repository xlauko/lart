#!/bin/bash

RUNTIME="@LART_RUNTIME_DIR@"
PASS="@CMAKE_CURRENT_BINARY_DIR@/liblart_module.so"

exec @CLANG_BINARY@                             \
     -Xclang -load -Xclang "$PASS"              \
     "$@"                                       \
     -L"$RUNTIME"                               \
     -llart-runtime                              \
     -Wl,-rpath,"$RUNTIME"                      \
     -Qunused-arguments
